<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts/index.css">
<script defer src="/javascripts/javascript.js"></script>
<%- include('../partials/nav') %>

<h1><%= title %></h1>

<main>
  <div class="posts-container">
    <% posts.forEach(post => { %>
      <div class="post-card">
        <div class="post-info"><h4><%= post.stage %></h4></div> 
        <div class="post-info"><h4>Author:</h4></div>
        <div class="post-info">
          <img id="avatar" 
          src="<%= post.author.avatar %>" 
          alt="user profile image"></div>
        <div class="post-info"><h4><%= post.author.name %></h4></div>
        <div class="post-info">
          <img 
            id="post-photo" 
            src="<%= post.photo %>" 
            alt="A picture of a sweet pet"></div>
          <div class="button-container">
            <button id="like-button"><span class="post-rating-button material-icons-outlined">ü§ç</span></button>
            <h4><%= post.likes.length %></h4>
            <a href="/posts/<%= post._id %>"><button class="details-button">See Post üîé</button></a>
          </div>
      </div>
    <% }) %>
  </div>
</main>

<%- include('../partials/footer') %>