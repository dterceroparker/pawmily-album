<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts/new.css">
<%- include('../partials/nav') %>

<h1><%= title %></h1>

<main>
  <div class="form-container">
    <form action="/posts" method="POST">
      <div class="stage-input">
        <label for="stage-input">Photo Life Stage</label> 
      <br>
      <select name="stage" id="stage-type">
        <option value="Puppy">Puppy</option>
        <option value="Adult">Adult</option>
        <option value="Sage">Sage</option>
      </select>
      </div>
      <br>
      <div class="photo-input">
        <label for="photo-input">Photo </label>
        <br>
        <input type="text" name="photo" placeholder="Photo URL">
      </div>
      <div class="description-input">
        <label for="description-input">Post Story </label>
        <br>
        <textarea placeholder="Please tell us more!" name="description" cols="50" rows="10"></textarea>
      </div>
      <div class="date-input">
        <label for="date-input">Date</label>
        <br>
        <input type="datetime-local" name="date" id="date-input">
        <input type="datetime-local" id="hidden-date" name="currentLocalDateTime" hidden>
      </div>
      <br>
      <div class="publish-btn">
        <button type="submit">Publish Post ðŸ–‹</button>
      </div>
    </form>
  </div>
</main>

<%- include('../partials/footer') %>
