<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/show.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<%- include('../partials/nav') %>

<h1><%= title %></h1>

<h3 class="nice-to-see-you">Nice to see you, <%= user.profile.name %>!</h3>

<section class="scroller">
  <main>
    <div class="post-container">
      <div class="post-card">
    <% if (posts.length) { %>
      <% posts.forEach(post => { %>
        <h4>Memory Lane: <%= post.stage %></h4>
        <div>
          <img id="post-photo" src="<%= post.photo %>" alt="A picture of a sweet pet">
          <h6><%= post.date.toLocaleString('en-US', {weekday: 'long', month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric'}) %></h6>
          <br>
          <p class="post-description"><%= post.description %></p>
        </div>
        <br>
        <% post.comments.forEach(comment => { %>
          <div class="comments">
            <div class="comment">
              <img 
                class="comment-image" 
                src="<%= comment.author.avatar %>" 
                alt="comment author avatar"
              >
              <p><%= comment.content %> </p>
              <br>
            </div>
          </div>
        <% }) %>
      <% }) %> 
      <div id="no-posts">
    <% } else { %>
      <h4>No posts yet ü§ç</h4>
      <% } %>
      </div>
      </div>
    </div>
  </main>
</section>

<%- include('../partials/footer') %>