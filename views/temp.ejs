<% if (post.comments.length) { %>
  <h4>Comments</h4>
  <ul>
    <% post.comments.forEach(comment => { %>
      <li>
        <%= comment.content %> - 
        <img 
          class="avatar" 
          src="<%= comment.author.avatar %>" 
          alt="comment author avatar"
        >
        <%= comment.author.name %> 
      </li>
    <% }) %>
  </ul>
<% } else { %>
