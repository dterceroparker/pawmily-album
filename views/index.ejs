<%- include('./partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts/root.css">
<%- include('./partials/nav') %>

<h1>Welcome, <%= user ? user.profile.name : "friend!" %></h1>
<main>
  <div class="log-in">  
  <% if (user?.profile.avatar) { %>
    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
  <% } %>
  <% if (!user) { %>
    <h3 class="log-in-message">Please sign in with Google on the top left!</h3> 
  <% } %>
  </div>
  <div class="pawmily">
    <h3 class="what">What's PawMily?</h3>
    <br><br>
    <p>Adventure down pet memory lane!</p>
    <br><br>
    <p>Filter posts based on pet age!</p>
    <br><br>
    <p>Members interact with your posts via likes and comments!</p>
    <br><br>
    <p>Add free!</p>
    <br><br>
  </div>
</main>
<%- include('./partials/footer') %>
