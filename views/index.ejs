<%- include('./partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css">

<%- include('./partials/nav') %>

<h1 class="welcome-h1">Welcome, <%= user ? user.profile.name : "friend!" %></h1>

<main class="index-container">
  <% if (!user) { %>
    <div class="log-in-container">
      <h4 class="log-in-message">Please sign in with Google on the left!</h4>
    </div>
  <% } %>
  <div class="circle-container">
    <div class="circle-image">
      <img class="circle-image" src="/assets/image/loves.jpeg" alt="two sweet puppies">
    </div>
    <div class="pawmily">
      <h3 class="what">PawMily Album</h3>
      <p>🎞 Relive pet memories with minimal distractions.</p>
      <p>🔎 Filter posts by life stage and access your photo album.</p>
      <p>🦋 Engage with member comments.</p>
      <p>🍂 Ad-free experience.</p>
    </div>
  </div>
</main>

<%- include('./partials/footer') %>
